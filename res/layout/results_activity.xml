<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/TVResultsPageTitle"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date: \n Shift:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true" />

    <Button 
        android:id="@+id/BToggleLunchDinner"
        android:layout_alignParentRight="true"
        android:layout_below="@id/TVResultsPageTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Show other"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>
        
    <TextView 
        android:id="@+id/TVCalculations"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/BToggleLunchDinner"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sales: \nCash Due: \nTotal Charges: \nTip-out:"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/TVHelpInfo"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVCalculations"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button 
            android:id="@+id/BDatabaseAction"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="manipulate database"
            />
        <Button 
            android:id="@+id/BQuitApplication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Quit"/>
    </RelativeLayout>

</RelativeLayout>
