<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/MainLayout">
<LinearLayout android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical">
<TextView android:layout_gravity="center" android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sales" android:textColor="#f21b20" android:textSize="12pt"></TextView>
<EditText android:layout_gravity="center" android:hint="Your Sales" android:id="@+id/EditTextSales" android:layout_width="wrap_content" android:layout_height="wrap_content" android:inputType="number|numberDecimal"></EditText>
</LinearLayout>

<LinearLayout android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical">
<TextView android:layout_gravity="center" android:text="Cash Due" android:id="@+id/TextView02" android:textColor="#f21b20" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="12pt"></TextView>
<EditText android:layout_gravity="center" android:hint="Net Deposit" android:id="@+id/EditTextDue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:inputType="number|numberSigned|numberDecimal"></EditText>
</LinearLayout>



<LinearLayout android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
<Button android:id="@+id/Button01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Calculate"></Button>
<Button android:id="@+id/Button02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Clear"></Button>
</LinearLayout>

<CheckBox android:layout_gravity="center" android:id="@+id/adjustCheckBox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Adjust Sales?" android:textColor="#f21b20"></CheckBox>

<LinearLayout android:layout_gravity="center"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical">
<TextView android:layout_gravity="center" android:id="@+id/TextViewAdjust" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#f21b20" android:textSize="12pt" android:text="Adjustment:"></TextView>
<EditText android:layout_gravity="center" android:hint="Amount To Add To Sales" android:id="@+id/adjustEditText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:inputType="number|numberSigned|numberDecimal"></EditText>
</LinearLayout>
</LinearLayout>
