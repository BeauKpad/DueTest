<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/llDataLayout"
  android:weightSum="10"
  android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:orientation="vertical" android:background="@color/beige">
<ListView android:layout_weight="10" android:layout_width="fill_parent" android:id="@android:id/list" android:layout_height="wrap_content"></ListView>
    <Button android:id="@+id/bStats" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="Stats" android:layout_weight="1" android:background="#FFAE00"/>
<TextView android:text="0" android:id="@+id/tvAverage" android:textColor="#f21b20" android:layout_weight="1" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textSize="12sp"/>
  <RadioGroup 
  android:layout_weight="1" android:id="@+id/DataRadioGroup" android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="fill_parent">
  <RadioButton android:checked="true" android:text="Lunch and Dinner" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/RadioBoth" android:clickable="true" />
  <RadioButton android:text="Dinner Only" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/RadioDinnerOnly" android:clickable="true" />
  <RadioButton android:text="Lunch Only" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/RadioLunchOnly" android:clickable="true" />
</RadioGroup>
</LinearLayout>
